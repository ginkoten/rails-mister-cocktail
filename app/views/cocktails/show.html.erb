<div class="container padded text-center">
  <% if @cocktail.photo? %>
    <%= cl_image_tag @cocktail.photo.path, width: 500, height: 375, crop: :fill, class: "big-image" %>
  <% end %>

  <h3><%= @cocktail.name %><h3>
  <hr>
  <h4>Dose</h4>
  <%= link_to "Post a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  <% @cocktail.doses.each do |dose| %>
    <p>
      <br>
      <%= dose.description %> -
       <%= dose.ingredient.name %>
    </p>
    <%= link_to "Remove", dose_path(dose), method: :delete %>
  <% end %>
  <br><br>
  <p><%= link_to "Delete the cocktail", cocktail_path(@cocktail), method: :delete, class: "btn btn-primary" %></p>
</div>


